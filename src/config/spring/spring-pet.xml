<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd" [  
<!ENTITY contextInclude SYSTEM "org/springframework/web/context/WEB-INF/contextInclude.xml">  
]>  
  
<beans>  
    <bean id="petDao" class="com.stark.web.dao.PetDAO">
        <property name="sessionFactory" ref="sessionFactory"></property>
    </bean>
    
    <bean id="petManagerBase" class="com.stark.web.service.PetManager">
        <property name="petDao" ref="petDao"></property>
    </bean>
    
    <bean id="petManager" parent="transactionBese">
        <property name="target" ref="petManagerBase"></property>
    </bean>
   
</beans>  